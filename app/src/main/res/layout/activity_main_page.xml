<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Common.MainPage"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:background="@drawable/available"
        android:onClick="available"

        android:orientation="vertical">

        <TextView
            android:id="@+id/available_block"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="120dp"
            android:background="@color/black"
            android:fontFamily="@font/alex_brush"
            android:text="Available Food"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:background="@drawable/cafe_block"
        android:onClick="ownerInfo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/information_block"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="120dp"
            android:background="@color/black"
            android:fontFamily="@font/alex_brush"
            android:text="Cafe Information"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:background="@drawable/my_cart"
        android:onClick="my_cart"
        android:orientation="vertical">

        <TextView
            android:id="@+id/my_cart_block"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="120dp"
            android:background="@color/black"
            android:fontFamily="@font/alex_brush"
            android:text="My cart"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp" />


    </LinearLayout>




</LinearLayout>